<!--footer start-->
<view class="footer">
    <view class="footer_dl">
        <view class="footer_dt">
            <image src="../images/icon_px.png" class="footer_img"></image>
        </view>
        <view class="footer_dd">
            <text>排序</text>
        </view>
    </view>
</view>
