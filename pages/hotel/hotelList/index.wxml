<!--seach start-->
<view class="seach">
    <view class="seach_input">
        <view class="seach_left">
            <view class="start_date">
                <text>住</text><text>{{StartDate.Month}}-{{StartDate.Day}}</text>
            </view>
            <view class="end_date">
                <text>离</text><text>{{EndtDate.Month}}-{{EndtDate.Day}}</text>
            </view>
        </view>
        <view class="seach_right">
            <input type="text" name="" placeholder="酒店名/商圈/地标" value="" class="cityinput" />
        </view>
    </view>
</view>
<!--seach end-->

<!--main start-->
<scroll-view class="main clear" style="height: 1160rpx;" scroll-y="true">

    <!--hotel_list start-->
    <view wx:for="{{hotelListRes.ListHotel}}" wx:key="HotelId" class="hotel_list clear" catchtap="handleToDetail" data-item="{{item.string}}">
        <!--hotel_dt-->
        <view class="hotel_dt">
            <image src="{{item.ListHotelCoverImg.length>0?item.ListHotelCoverImg[0].PicUrl:'../images/images.png'}}" class="hotel_img"></image>
        </view>
        <!--hotel_dd-->
        <view class="hotel_dd">
            <text class="hotel_title">{{item.HotelName}}</text>
            <text class="hotel_home">{{item.HotelStarType}}</text>
            <view class="hotel_icon">
                <image wx:if="{{item.IsHaveWiFi}}" src="../images/wifi.png" class="icon_wifi"></image>
                <image wx:if="{{item.IsHavePark}}" src="../images/icon_p.png" class="icon_p"></image>
            </view>
            <text class="hotel_range">{{item.HotelAddress}}</text>
            <view class="hotel_ticket">
                <text wx:if="{{item.MaxCashback}}">返</text>
                 <!--<text>新客券</text>-->
            </view>
            <view class="hotel_price">
                <text wx:if="{{item.HotelStatu==0}}" class="price_texts">已住满</text>
                <text wx:if="{{item.HotelStatu==1}}" class="price_text"><text class="price_em">￥</text>615<text class="price_span">起</text></text>
            </view>
        </view>
    </view>
