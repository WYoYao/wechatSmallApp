<!--排序 start-->
<view class="sorting" style="display: none;">
    <view class="sorting_bg"></view>
    <view class="sorting_con">
        <view class="sorting_ul">
            <view class="sorting_li sorting_active">
                <text>推荐排序</text>
            </view>
            <view class="sorting_li">
                <text>价格  低→高</text>
            </view>
            <view class="sorting_li">
                <text>价格  高→低</text>
            </view>
            <view class="sorting_li">
                <text>距离排序</text>
            </view>
        </view>
    </view>
</view>
