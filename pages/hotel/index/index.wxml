<view class="content">
  <view class="address">
    <view class="addresss_key">
      <text>目的地</text>
    </view>
    <view class="addresss_value" bindtap="handle_city_list">
      <text>北京</text>
    </view>
  </view>
  <view class="date clear">
    <view class="date_message">
      <view>
        <text class="date_text">入住</text>
        <text class="date_value">01月10日</text>
        <text class="date_now">今天</text>
      </view>
      <view>
        <text class="date_text">离店</text>
        <text class="date_value">01月11日</text>
        <text class="date_now">明天</text>
      </view>
    </view>
    <view class="date_total">
      <text>共1晚</text>
    </view>
  </view>
  <view class="keyword">
    <view class="addresss_key">
      <text>关键字</text>
    </view>
    <view class="addresss_value">
      <text>不限</text>
    </view>
  </view>
  <view class="star">
    <view class="addresss_key">
      <text>星级价格</text>
    </view>
    <view class="addresss_value">
      <text>不限</text>
    </view>
  </view>
  <view class="button">
    <button type="default" style="background-color: #ff8522;color: #fff;" id="search" loading="{{loading}}" plain="{{plain}}"
        disabled="{{disabled}}" bindtap="handle_submit" hover-class="other-button-hover"> 查询 </button>
  </view>
</view>